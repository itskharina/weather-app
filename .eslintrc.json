{
    "extends": ["airbnb", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-process-exit": "off",
      "object-shorthand": "off",
      "class-methods-use-this": "off",
      "prettier/prettier": ["error", { "singleQuote": true }],
      "no-use-before-define": ["error", {"functions": false, "classes": false}]
    },
    "env": {
      "browser": true,
      "node": true
    }
  }